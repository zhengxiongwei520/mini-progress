.goods_list_page .first_tab navigator {
  display: flex;
  border-bottom: 1px solid #ccc;
}
.goods_list_page .first_tab .goods_item_left {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.goods_list_page .first_tab .goods_item_left image {
  width: 70%;
}
.goods_list_page .first_tab .goods_item_right {
  flex: 3;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.goods_list_page .first_tab .goods_item_right .good_name {
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.goods_list_page .first_tab .goods_item_right .good_price {
  color: #D81E06;
}
