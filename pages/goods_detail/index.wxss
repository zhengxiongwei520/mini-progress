.goods_detail_page {
  padding-bottom: 90rpx;
}
.goods_detail_page swiper {
  height: 60vw;
  text-align: center;
}
.goods_detail_page swiper image {
  width: 60%;
  height: 60%;
}
.goods_detail_page .price {
  font-size: 40rpx;
}
.goods_detail_page .title {
  border-bottom: 4px solid #f5f5f5;
}
.goods_detail_page .introduce .text-theme {
  font-size: 40rpx;
}
.goods_detail_page .bottom_tool {
  position: fixed;
  bottom: 0;
  left: 0;
  height: 90rpx;
}
.goods_detail_page .bottom_tool .tool_item {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: relative;
}
.goods_detail_page .bottom_tool .tool_item button {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
}
.goods_detail_page .bottom_tool .btn_buy {
  background-color: #ffa500;
}
